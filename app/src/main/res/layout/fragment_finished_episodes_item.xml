<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="episode"
            type="com.axelby.podax.model.EpisodeData" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:onClick="@{episode.show}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardBG">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="75dip"
                android:layout_height="75dip"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/subscription_thumbnail"
                android:transitionName="subscriptionImage"
                app:subscriptionImageId="@{episode.subscriptionId}"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_toEndOf="@+id/thumbnail"
                android:textSize="18sp"
                tools:text="Episode Name that is VERY VERY LONG"
                android:transitionName="subscriptionName"
                android:text="@{episode.title}"
                />

            <TextView
                android:id="@+id/subscription_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/title"
                android:layout_alignStart="@id/title"
                android:layout_below="@id/title"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                tools:text="Subscription Name"
                android:text="@{episode.subscriptionTitle}"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/title"
                android:layout_alignStart="@id/title"
                android:layout_below="@id/subscription_title"
                android:layout_marginTop="4dp"
                tools:text="Finished on June 12, 2014"
                android:text="@{episode.getFinishedDate(context)}"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#333333"
                android:layout_marginTop="10dp"
                android:layout_below="@id/date" />

            <TextView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:layout_below="@id/divider"
                android:textColor="?attr/colorPrimary"
                android:text="@{episode.isDownloaded(context) ? @string/play : @string/stream}"
                android:onClick="@{episode.playAndShow}"
                />

            <TextView
                android:id="@+id/playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_toLeftOf="@id/play"
                android:layout_toStartOf="@id/play"
                android:layout_alignBaseline="@id/play"
                android:text="@{episode.playlistPosition == null ? @string/add_to_playlist : @string/remove_from_playlist}"
                android:onClick="@{episode.togglePlaylist}"
                />

            <!-- fixes issue where card height doesn't cover controls -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/play" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>
