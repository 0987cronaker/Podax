<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="podaxColor">#FFE59F39</color>
    <color name="podaxBlue">#FF085D99</color>

    <color name="orange500">#FFff9800</color>
    <color name="orange700">#FFf57c00</color>
    <color name="lightblue500">#FF03a9f4</color>

    <style name="Theme.Podax" parent="Theme.Podax.Base" />

    <style name="Theme.Podax.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorPrimaryDark">@color/orange700</item>
        <item name="colorAccent">@color/lightblue500</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.Podax.Button.Small" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.Podax.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.Podax.Button.Flat" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Widget.Podax.Button.Flat.Primary" parent="Widget.Podax.Button.Flat">
        <item name="android:textColor">@color/orange500</item>
    </style>

    <style name="Widget.Podax.ImageButton.Flat" parent="android:Widget.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mainText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="drawerText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>