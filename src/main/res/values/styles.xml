<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Podax" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/Widget.Podax.Button</item>
        <item name="android:buttonStyleSmall">@style/Widget.Podax.Button.Small</item>
        <item name="android:actionBarStyle">@style/Widget.Podax.ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/Widget.Podax.ActionBar.TabBar</item>
    </style>

    <color name="podaxColor">#FFE59F39</color>
    <color name="podaxRed">#FFFC4332</color>
    <color name="podaxYellow">#FFFCF232</color>
    <color name="podaxGreen">#FF28CB2F</color>
    <color name="podaxPurple">#FFBF30F2</color>
    <color name="podaxBright">#FFFFBC59</color>
    <color name="podaxBlue">#FF085D99</color>
    <color name="podaxBlueBright">#FF399FE5</color>

    <color name="orange500">#FFff9800</color>
    <color name="orange100">#FFffe0b2</color>
    <color name="orange700">#FFf57c00</color>
    <color name="indigo500">#FF3f51b5</color>
    <color name="lightblue500">#FF03a9f4</color>

    <style name="Widget.Podax.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/orange500</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="Widget.Podax.ActionBar.TabBar" parent="android:Widget.ActionBar.TabBar">
        <item name="android:background">@color/orange500</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="Widget.Podax.Button.Small" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.Podax.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.Podax.Button.Flat" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="Widget.Podax.Button.Flat.Primary" parent="Widget.Podax.Button.Flat">
        <item name="android:textColor">@color/orange500</item>
    </style>

    <style name="mainText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="drawerTextBase">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#111</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="drawerTextHeader" parent="@style/drawerTextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textColor">@color/podaxBright</item>
    </style>

    <style name="drawerText" parent="@style/drawerTextBase">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>