<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <View android:id="@+id/l1"
        android:layout_width="15dp"
        android:layout_height="match_parent" />

    <View android:id="@+id/l2"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FF101010"/>

    <View android:id="@+id/l3"
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="@color/cardBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/subscription_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitStart"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp"
            android:contentDescription="@string/subscription_logo"
            tools:src="@drawable/icon"
            />

        <TextView
            android:id="@+id/episode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/subscription_img"
            android:layout_toRightOf="@id/subscription_img"
            android:layout_toEndOf="@id/subscription_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="22sp"
            tools:text="Episode Title"
            android:textColor="#ffffffff"
            android:lines="4"
            />

        <TextView
            android:id="@+id/episode_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subscription_img"
            android:layout_alignLeft="@id/subscription_img"
            android:layout_alignStart="@id/subscription_img"
            android:layout_alignRight="@id/episode_title"
            android:layout_alignEnd="@id/episode_title"
            android:textSize="20sp"
            tools:text="This is the description of the episode. It's probably much longer than two lines."
            android:textColor="#ffa0a0a0"
            android:lines="2"
            android:ellipsize="end"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="0dip"
            android:layout_height="2dp"
            android:background="#ff2a2a2a"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/episode_description"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/play"
            android:layout_alignLeft="@id/subscription_img"
            android:layout_alignStart="@id/subscription_img"
            android:layout_toLeftOf="@+id/play"
            android:layout_toStartOf="@+id/play"
            android:textSize="16sp"
            android:text="@string/downloaded"
            android:textColor="#ff8bc34a"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/Widget.Podax.Button"
            android:text="@string/play"
            />

    </RelativeLayout>
</LinearLayout>
