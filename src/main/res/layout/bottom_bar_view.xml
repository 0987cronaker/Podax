<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <View
        android:id="@+id/progressbg"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        tools:ignore="PxUsage" />

    <View
        android:id="@+id/progressline"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_above="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?attr/colorAccent"
        tools:ignore="PxUsage" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/play"
        android:padding="10dp"
        android:minHeight="50dp"
        android:src="@drawable/ic_action_play" />

    <TextView
        android:id="@+id/episode_title"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_below="@id/progressbg"
        android:layout_alignTop="@+id/play"
        android:layout_alignBottom="@+id/play"
        android:layout_toRightOf="@+id/play"
        android:layout_toEndOf="@+id/play"
        android:layout_toStartOf="@+id/expand"
        android:layout_toLeftOf="@+id/expand"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        android:textSize="20sp"
        android:minHeight="50dp"
        tools:text="Episode Title" />

    <ImageButton
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/episode_title"
        android:layout_alignBottom="@+id/episode_title"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/expand"
        android:padding="10dp"
        android:minHeight="50dp"
        android:src="@drawable/ic_action_collapse" />

</RelativeLayout>