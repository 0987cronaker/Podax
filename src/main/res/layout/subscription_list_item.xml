<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.axelby.podax.podcastlist.ItemModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{model.show}">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitStart"
            android:contentDescription="@string/subscription_thumbnail"
            tools:src="@drawable/icon"
            app:picassoImageUrl="@{model.imageUrl}"
            android:transitionName="subscriptionImage"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fitzdog Radio"
            android:text="@{model.title}"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:transitionName="subscriptionName"
            />

    </LinearLayout>
</layout>
