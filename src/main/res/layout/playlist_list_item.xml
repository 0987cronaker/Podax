<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/drag"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu_moreoverflow"
            />

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="75dip"
            android:layout_height="75dip"
            tools:src="@drawable/icon"
            android:layout_toRightOf="@id/drag"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/thumbnail"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Episode Name That Could Be Really Really Long"
            android:layout_toRightOf="@id/thumbnail"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/subscription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="Subscription Name"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/thumbnail"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100% downloaded"
            android:textAllCaps="true"
            android:textColor="#ff999999"
            android:layout_below="@id/thumbnail"
            android:layout_toRightOf="@id/drag"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textAllCaps="true"
            style="@style/Widget.Podax.Button.Flat.Primary"
            android:layout_alignBaseline="@id/downloaded"
            android:layout_alignParentRight="true"
            />

        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:textAllCaps="true"
            style="@style/Widget.Podax.Button.Flat"
            android:layout_alignBaseline="@id/downloaded"
            android:layout_toLeftOf="@id/play"
            />

        <View
            android:layout_height="10dp"
            android:layout_width="0dp"
            android:layout_below="@id/downloaded"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>