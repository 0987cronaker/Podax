<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.axelby.podax.ui.PlaylistFragment.EpisodeModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardBG"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:onClick="@{model.show}">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/drag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/thumbnail"
                android:background="@drawable/ic_action_drag" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="75dip"
                android:layout_height="75dip"
                tools:src="@drawable/icon"
                app:subscriptionImageId="@{model.subscriptionId}"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:contentDescription="@string/thumbnail" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:text="Episode Name That Could Be Really Really Long"
                android:text="@{model.title}"
                android:layout_toRightOf="@id/thumbnail"
                android:layout_toEndOf="@id/thumbnail"
                android:layout_alignTop="@id/thumbnail"
                android:layout_toLeftOf="@id/drag"
                android:layout_toStartOf="@id/drag"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="downloaded"
                android:text="@{model.downloadStatus}"
                tools:textColor="@android:color/holo_green_dark"
                android:textColor="@{model.downloadStatusColor}"
                android:textAllCaps="true"
                android:layout_alignBottom="@id/play"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />


            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1:42:59"
                android:text="@{model.duration}"
                android:textColor="#ff999999"
                android:layout_above="@id/downloaded"
                android:layout_alignLeft="@id/downloaded"
                android:layout_alignStart="@id/downloaded"
                android:layout_marginBottom="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/thumbnail"
                android:layout_margin="20dp"
                android:textColor="?attr/colorPrimary"
                android:onClick="@{model.play}" />

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/play"
                android:layout_toStartOf="@id/play"
                android:layout_alignBaseline="@+id/play"
                android:layout_margin="20dp"
                android:textColor="?attr/colorPrimary"
                android:onClick="@{model.remove}" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>
