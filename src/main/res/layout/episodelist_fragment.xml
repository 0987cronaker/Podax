<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="subscription"
            type="com.axelby.podax.SubscriptionData" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.axelby.podax.ui.SquareImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/subscription_thumbnail"
                android:adjustViewBounds="true"
                app:picassoImageUrl="@{subscription.thumbnail}"
                tools:src="@drawable/icon"
                android:transitionName="subscriptionImage" />

            <TextView
                android:id="@+id/subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:text="@{subscription.title}"
                tools:text="Subscription Name"
                android:transitionName="subscriptionName" />

            <TextView
                android:id="@+id/currently_updating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{subscription.isCurrentlyUpdating ? View.VISIBLE : View.GONE}"
                tools:visibility="visible"
                android:gravity="center"
                android:background="@color/orange500"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#111111"
                android:text="@string/subscription_currently_updating"/>

            <!-- TODO: next two checkboxes width should be wrap_content -->
            <CheckBox
                android:id="@+id/subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subscribe"
                android:checked="@{subscription.isSubscribed}"
                android:onChange="@{subscription.changeSubscribe}" />

            <CheckBox
                android:id="@+id/add_new_episodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_new_episodes_to_playlist"
                android:checked="@{subscription.areNewEpisodesAddedToPlaylist}"
                android:onChange="@{subscription.changeAddNewToPlaylist}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/episodes"
                android:textColor="?attr/colorPrimary"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:layout_marginTop="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?attr/colorPrimary" />

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:children="@{subscription.getEpisodes(context)}"
                app:childLayout="@{@layout/episodelist_item}"
                />

        </LinearLayout>
    </ScrollView>

</layout>
