<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_rss_feed"
            android:id="@+id/add_rss_text"
            android:layout_margin="10dp"
            android:layout_alignBaseline="@+id/rssurl"
            android:layout_alignBottom="@+id/rssurl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rssurl"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/add_rss_text"
            android:layout_toEndOf="@+id/add_rss_text"
            android:inputType="textUri"
            android:layout_toLeftOf="@+id/add_rss"
            android:layout_toStartOf="@+id/add_rss" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/add_rss"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#66000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        tools:ignore="PxUsage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/subscribe_on_web"
        android:id="@+id/web_subscribe"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#66000000"
        android:layout_marginTop="20dp"
        tools:ignore="PxUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_a_podcast"
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="#66000000"
        android:id="@+id/textView2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider"
        tools:ignore="PxUsage" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        tools:listitem="@layout/fragment_add_subscription_item"/>

</LinearLayout>
