<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.axelby.podax.ui.AddSubscriptionFrame
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:headerIcon="@drawable/ic_asbox_rss_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_rss_feed"
                android:id="@+id/add_rss_text"
                android:textAllCaps="true"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rssurl"
                android:inputType="textUri"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add"
                android:id="@+id/add_rss"
                style="@style/Widget.Podax.Button.Card"
            />
        </LinearLayout>
    </com.axelby.podax.ui.AddSubscriptionFrame>

    <com.axelby.podax.ui.AddSubscriptionFrame
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:headerIcon="@drawable/ic_asbox_globe_primary">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/subscribe_on_web"
            android:id="@+id/web_subscribe"
            style="@style/Widget.Podax.Button.Card"
            />

    </com.axelby.podax.ui.AddSubscriptionFrame>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#66000000"
        android:layout_marginTop="20dp"
        tools:ignore="PxUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_a_podcast"
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="#66000000"
        android:id="@+id/textView2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider"
        tools:ignore="PxUsage" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        tools:listitem="@layout/fragment_add_subscription_item"/>

</LinearLayout>
