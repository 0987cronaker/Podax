<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/layout"
				  android:layout_width="fill_parent" android:layout_height="fill_parent"
				  android:orientation="vertical" android:layout_above="@+id/player">
		<TextView android:id="@+id/header"
				  android:text="@string/app_long_name"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:textAppearance="?android:attr/textAppearanceLarge"
				  android:gravity="center_horizontal" />

		<RelativeLayout android:id="@+id/queue"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:paddingTop="10dp" android:paddingBottom="10dp" 
						android:paddingLeft="20dp" android:paddingRight="0dp">
			<ImageView android:id="@+id/queue_img"
					   android:layout_width="64px" android:layout_height="64px"
					   android:src="@drawable/oldicon"/>
			<TextView android:id="@+id/queue_text"
					  android:layout_width="fill_parent" android:layout_height="wrap_content"
					  android:paddingLeft="20dp"
					  android:text="@string/queue"
					  android:textAppearance="?android:attr/textAppearanceMedium"
					  android:layout_toRightOf="@id/queue_img" android:layout_centerVertical="true" />
		</RelativeLayout>

		<RelativeLayout android:id="@+id/subscriptions"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:paddingTop="10dp" android:paddingBottom="10dp" 
						android:paddingLeft="20dp" android:paddingRight="0dp">
			<ImageView android:id="@+id/subscriptions_img"
					   android:layout_width="64px" android:layout_height="64px"
					   android:src="@drawable/oldicon"/>
			<TextView android:id="@+id/subscriptions_text"
					  android:layout_width="fill_parent" android:layout_height="wrap_content"
					  android:paddingLeft="20dp"
					  android:text="@string/subscriptions"
					  android:textAppearance="?android:attr/textAppearanceMedium"
					  android:layout_toRightOf="@id/subscriptions_img" android:layout_centerVertical="true" />
		</RelativeLayout>

		<RelativeLayout android:id="@+id/readerimport"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:paddingTop="10dp" android:paddingBottom="10dp" 
						android:paddingLeft="20dp" android:paddingRight="0dp">
			<ImageView android:id="@+id/readerimport_img"
					   android:layout_width="64px" android:layout_height="64px"
					   android:src="@drawable/oldicon"/>
			<TextView android:id="@+id/readerimport_text"
					  android:layout_width="fill_parent" android:layout_height="wrap_content"
					  android:paddingLeft="20dp"
					  android:text="@string/reader_import"
					  android:textAppearance="?android:attr/textAppearanceMedium"
					  android:layout_toRightOf="@id/readerimport_img" android:layout_centerVertical="true" />
		</RelativeLayout>

	</LinearLayout>
	<include android:id="@+id/player" layout="@layout/player"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:layout_alignParentBottom="true" />
</RelativeLayout>