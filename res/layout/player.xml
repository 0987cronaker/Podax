<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
	<ImageButton android:id="@+id/pausebtn"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content" 
				 android:src="@drawable/android:ic_media_play"
				 android:layout_alignParentLeft="true" />
	<LinearLayout android:id="@+id/LinearLayout02"
				  android:orientation="vertical"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:layout_toRightOf="@id/pausebtn">
		<TextView android:id="@+id/podcasttitle"
				  android:text="podcast"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content" />
		<TextView android:id="@+id/position"
				  android:text="position / duration"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content" />
	</LinearLayout>
	<ImageButton android:id="@+id/showplayer"
			 	 android:layout_width="wrap_content"
			 	 android:layout_gravity="center"
			 	 android:src="@drawable/play"
			 	 android:background="@android:color/transparent"
			 	 android:layout_alignParentRight="true" android:layout_height="45dp"/>
</RelativeLayout>
