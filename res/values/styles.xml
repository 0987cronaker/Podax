    <style name="Widget.Podax.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_podax</item>
        <item name="background">@drawable/ab_podax</item>
    </style>

    <style name="Widget.Podax.ActionBar.TabView" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/ab_tabview</item>
        <item name="android:background">@drawable/ab_tabview</item>
    </style>

    <style name="Theme.Podax" parent="@style/Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Podax.ActionBar</item>
