<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Podax" parent="Theme.AppCompat">
        <item name="android:buttonStyle">@style/podaxButton</item>
        <item name="android:buttonStyleSmall">@style/podaxButtonSmall</item>
    </style>

    <color name="podaxColor">#FFE59F39</color>
    <color name="podaxRed">#FFFC4332</color>
    <color name="podaxYellow">#FFFCF232</color>
    <color name="podaxGreen">#FF28CB2F</color>
    <color name="podaxPurple">#FFBF30F2</color>
    <color name="podaxBright">#FFFFBC59</color>
    <color name="podaxBlue">#FF085D99</color>
    <color name="podaxBlueBright">#FF399FE5</color>

    <style name="podaxButtonSmall" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="podaxButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mainText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="drawerTextBase">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#111</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="drawerTextHeader" parent="@style/drawerTextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textColor">@color/podaxBright</item>
    </style>

    <style name="drawerText" parent="@style/drawerTextBase">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>