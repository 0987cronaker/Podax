        <item name="actionBarTabStyle">@style/Widget.Podax.ActionBar.TabView</item>
        <item name="android:actionBarTabStyle">@style/Widget.Podax.ActionBar.TabView</item>
    </style>

	<color name="podaxColor">#FFE59F39</color>

    <style name="mainText" parent="@android:style/TextAppearance.Large">
