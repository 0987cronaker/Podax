<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Podax" parent="@style/Theme.AppCompat"></style>

    <color name="podaxColor">#FFE59F39</color>

    <style name="mainText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="drawerTextBase">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#111</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="drawerTextHeader" parent="@style/drawerTextBase">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:minHeight">46dp</item>
    </style>

    <style name="drawerText" parent="@style/drawerTextBase">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>